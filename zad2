#include <iostream>
#include <math.h>

using namespace std;

int main (){

    cout<<"Podaj liczbe calkowita, ktorej silnie chcesz wyliczyc: ";

    int n,a=1,i=1;
    cin>>n;

    if(n==0){
        cout<<"Silnia podanej liczby wynosi: 1";
    }
    else if(n>0){
        while(i<n){
            a=a*(i+1);
            i++;
        }
    }

    cout<<endl<<"Silnia podanej liczby wynosi: "<<a<<endl;

return 0;
}
